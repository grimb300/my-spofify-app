<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <title>My Spotify App</title>
</head>
<body>
  <h1>My Spotify App</h1>

  <h3>Tracklist for <%=playlist.Title%></h3>
  <p><%=playlist.Description%></p>
  <style>
    .wrapper {
      display: grid;
    }
    .track {
      grid-column: 1;
    }
    .title {
      grid-column: 2;
    }
    .artist {
      grid-column: 3;
    }
    .album {
      grid-column: 4;
    }
    .spotify {
      grid-column: 5;
    }
  </style>
  <div class="wrapper">
    <div class="track"><strong>Track No</strong></div>
    <div class="title"><strong>Title</strong></div>
    <div class="artist"><strong>Artist</strong></div>
    <div class="album"><strong>Album</strong></div>
    <div class="spotify"><strong>Spotify Track(s)</strong></div>
    <% if (playlist.Tracks) { %>
      <% playlist.Tracks.forEach((track, index) => { %>
        <div class="track"><%=index + 1%></div>
        <div class="title"><a href="/google_playlists/<%=playlistId%>/track/<%=index%>"><%=track.Title%></a></div>
        <div class="artist"><%=track.Artist%></div>
        <div class="album"><%=track.Album%></div>
        <div class="spotify">Spotify?</div>
      <% }) %>
    <% } else { %>
      <p>Playlist is empty</p>
    <% } %>
  </div>

  <!-- Latest compiled and minified JavaScript -->
  <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script> -->
</body>
</html>