<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <title>My Spotify App</title>
</head>
<body>
  <h1>My Spotify App</h1>

  <h3>Details for Track <%=trackId%> in playlist <%=playlistId%></h3>
  <style>
    .wrapper {
      display: grid;
    }
    .title {
      grid-column: 1;
    }
    .artist {
      grid-column: 2;
    }
    .album {
      grid-column: 3;
    }
    .track-no {
      grid-column: 4;
    }
    .spotify {
      grid-column: 5;
    }
  </style>
  <div class="wrapper">
    <div class="title"><strong>Title</strong></div>
    <div class="artist"><strong>Artist</strong></div>
    <div class="album"><strong>Album</strong></div>
    <% if (track) { %>
      <div class="title"><%=track.Title%></div>
      <div class="artist"><%=track.Artist%></div>
      <div class="album"><%=track.Album%></div>
    <% } else { %>
      <p>Track is empty</p>
    <% } %>
  </div>

  <h3>Found <%=numResults%> matching Spotify tracks</h3>
  <div class="wrapper">
    <div class="title"><strong>Title</strong></div>
    <div class="artist"><strong>Artist</strong></div>
    <div class="album"><strong>Album</strong></div>
    <div class="album"><strong>Track No</strong></div>
    <div class="spotify"><strong>Spotify ID</strong></div>
    <% if (numResults > 0) { %>
      <% searchResults.forEach((spotifyTrack) => { %>
        <div class="title"><%=spotifyTrack.name%></div>
        <div class="artist"><%=spotifyTrack.artists.map((artist) => artist.name).join(', ')%></div>
        <div class="album"><%=spotifyTrack.album.name%></div>
        <div class="track-no"><%=spotifyTrack.track_number%></div>
        <div class="spotify"><%=spotifyTrack.id%></div>
      <% }) %>
    <% } else { %>
      <p>Search results are empty</p>
    <% } %>
  </div>

  <!-- Latest compiled and minified JavaScript -->
  <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script> -->
</body>
</html>