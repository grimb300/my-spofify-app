<%- include('./partials/header'); %>

<h3>Logged in to Spotify as <%=user.display_name%></h3>
<div class="media">
  <div class="pull-left">
    <img class="media-object" width="150" src="<%=user.images[0].url%>" />
  </div>
  <div class="media-body">
    <dl class="dl-horizontal">
      <dt>Display name</dt><dd class="clearfix"><%=user.display_name%></dd>
      <dt>Id</dt><dd><%=user.id%></dd>
      <dt>Email</dt><dd><%=user.email%></dd>
      <dt>Spotify URI</dt><dd><a href="<%=user.external_urls.spotify%>"><%user.external_urls.spotify%></a></dd>
      <dt>Link</dt><dd><a href="<%=user.href%>"><%=user.href%></a></dd>
      <dt>Profile Image</dt><dd class="clearfix"><a href="<%=user.images[0].url%>"><%=user.images[0].url%></a></dd>
      <dt>Country</dt><dd><%=user.country%></dd>
    </dl>
  </div>
</div>

<style>
  .wrapper {
    display: grid;
  }
  .title {
    grid-column: 1;
  }
  .description {
    grid-column: 2;
  }
</style>
<h3>Google Playlists (<%=googlePlaylists.length%>)</h3>
<div class="wrapper">
  <div class="title"><strong>Playlist</strong></div>
  <div class="description"><strong>Description</strong></div>
  <% if (googlePlaylists) { %>
    <% googlePlaylists.forEach((playlist, playlistId) => { %>
      <div class="title"><a href="/google_playlists/<%=playlistId%>"><%=playlist.title%></a></div>
      <div class="description"><%=playlist.description%></div>
    <% }) %>
  <% } %>
</div>

<%- include('./partials/footer'); %>